@model IEnumerable<TRANQUOCKHANH_LAP456_BIGSCHOOL.Models.Course>
@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mine</h2>
<ul class="course">
    @foreach (var course in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @course.DateTime.ToString("MM")
                </div>
                <div class="day">
                    @course.DateTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="lecturer">
                    @course.Lecturer.Name
                    
                </span>
                <span class="category">
                    @course.Category.Name
                </span>
                
            </div>


            <div class="action">

               @* <a href="">Edit</a> |*@

                <a href="@Url.Action("Edit", "Courses", new { id = course.Id})">
                    Edit
                </a>
                |
                
                <a href="">Delete</a>
            </div>

        </li>
    }
</ul>





@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-cancel-course").click(function (e) {
                e.preventDefault();
                var link = $(e.target);
                bootbox.confirm("Are you sure to cancel?",
                    function () {
                        $.ajax({
                            url: "/api/coursee/" + link.attr("data-course-id"),
                            method: "DELETE"
                        })
                            .done(function () {
                                link.parent("li").fadeOut(function () {
                                    $(this).remove();
                                });
                            });
                        .fail(function () {
                                alert("Something failed!");
                            });
                    });
            });
        });
    </script>
    
}














